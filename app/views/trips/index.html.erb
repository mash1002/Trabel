<h1>投稿一覧</h1>

<% if customer_signed_in? %>
<% end %>
<%= form_with scope: :trip, url: trips_path, method: :get do |f| %>
  <%= f.text_field :address %>
  <%= f.submit '検索', class: "btn btn-sm btn-outline-success mx-1" %>
<% end %>

<% @trips.each do |trip| %>
<%= link_to trip_path(trip) do %>
 <%= image_tag trip.image, size:"100x100" if trip.image.attached? %>
 <%= trip.description%>
<% end %>
 <% if trip.favorited_by?(current_customer) %>
    <p>
      <%= link_to trip_favorites_path(trip), method: :delete do %>
        ♥<%= trip.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to trip_favorites_path(trip), method: :post do %>
        ♡<%= trip.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>
 <p><%= link_to "コメント", trip_comments_path(trip_id: trip.id) %></p>
<% end %>

